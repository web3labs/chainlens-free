apiVersion: apps/v1
kind: Deployment
metadata:
  name: sirato-api-deployment
spec:
  selector:
    matchLabels:
      run: sirato-api
  replicas: 1
  template:
    metadata:
      labels:
        run: sirato-api
    spec:
      containers:
      - name: sirato-api
        image: web3labs/epirus-free-api:latest
        ports:
        - containerPort: 8090
        env:
        - name: MONGO_CLIENT_URI
          value: mongodb://sirato-db:27017
        - name: MONGO_DB_NAME
          value: "epirus"
        - name: MONGO_CREATE_INDICES
          value: "true"
        - name: NODE_ENDPOINT
          value: NODEENDPOINT
        - name: REINDEX_ENDPOINT
          value: http://sirato-ingestion/reindex
---
apiVersion: v1
kind: Service
metadata:
  name: sirato-api
  labels:
    run: sirato-api
spec:
  ports:
  - port: 8090
    protocol: TCP
  selector:
    run: sirato-api
